}

/* Sol menü */
.sidebar {
    width: 90%;
    background-color: white;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    border-radius: 10px; /* Daha şık bir görünüm için köşeler yuvarlatıldı */
}

.sidebar a {
    color: #2c3e50;
    text-decoration: none;
    margin: 15px 0;
    font-size: 1.2rem;
    padding: 10px 15px;
    width: 80%;
    border-radius: 5px;
    transition: background-color 0.3s ease, color 0.3s ease, box-shadow 0.3s ease;
    border-radius: 10px; /* Daha şık bir görünüm için köşeler yuvarlatıldı */
}

/* Hover ve aktif durumunda renk ve gölge geçişleri */
.sidebar a:hover, .sidebar a.active {
    background-color: #007bff; /* Aktif veya hover durumunda arka plan rengi */
    color: white; /* Aktif veya hover durumunda yazı rengi */
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* Hover veya aktif durumda gölge efekti */
    border-radius: 10px; /* Daha şık bir görünüm için köşeler yuvarlatıldı */
}

/* İkon eklemek için boşluk düzenlemeleri (isteğe bağlı) */
.sidebar a::before {
    content: '•'; /* Menü elemanlarının başına işaret koyma (ikonla değiştirilebilir) */
    margin-right: 10px; /* İşaret ile yazı arasında boşluk */
    color: #007bff; /* İkonun rengi */
    transition: color 0.3s ease; /* İkon renginin geçişi */
    border-radius: 10px; /* Daha şık bir görünüm için köşeler yuvarlatıldı */
}

/* Hover durumunda ikonu beyaz yap */
.sidebar a:hover::before, .sidebar a.active::before {
    color: white; /* Aktif veya hover durumunda ikonun rengi */
    border-radius: 10px; /* Daha şık bir görünüm için köşeler yuvarlatıldı */
}

/* Logo düzeni */
