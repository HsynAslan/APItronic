<script>
let currentIndex = 0;
const slides = document.querySelectorAll('.carousel-slide img');
const indicators = document.querySelectorAll('.indicator');
const slideInterval = 3000; // 3 saniye

function goToSlide(index) {
    const carouselSlide = document.querySelector('.carousel-slide');
    currentIndex = index;
    const slideWidth = slides[0].clientWidth;
    carouselSlide.style.transform = `translateX(${-slideWidth * index}px)`;

    indicators.forEach((indicator, i) => {
        if (i === index) {
            indicator.classList.add('active');
        } else {
            indicator.classList.remove('active');
        }
    });
}

function nextSlide() {
    currentIndex = (currentIndex + 1) % slides.length;
    goToSlide(currentIndex);
}

let slideTimer = setInterval(nextSlide, slideInterval);

indicators.forEach((indicator, index) => {
    indicator.addEventListener('click', () => {
        clearInterval(slideTimer); // Otomatik geçişi durdur
        goToSlide(index);
        slideTimer = setInterval(nextSlide, slideInterval); // Tıklamadan sonra otomatik geçişi tekrar başlat
    });
});

</script>

